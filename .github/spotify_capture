name: Spotify KPOP Capture


on:
schedule:
- cron: "0 9 * * *" # 한국시간 18시 = UTC 09:00
workflow_dispatch:


jobs:
capture:
runs-on: ubuntu-latest


steps:
- name: Checkout
uses: actions/checkout@v4


- name: Setup Python
uses: actions/setup-python@v5
with:
python-version: '3.10'


- name: Install dependencies
run: |
pip install spotipy
pip install openpyxl


- name: Run script
run: python scripts/spotify_kpop_capture.py


- name: Upload artifact
uses: actions/upload-artifact@v4
with:
name: spotify-kpop-capture
path: captures/
